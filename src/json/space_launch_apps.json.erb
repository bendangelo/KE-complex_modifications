{
    "title": "Right Command Launch apps",
    "rules": [
        {
            "description": "Launch apps by r_command+letters.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("fn", [], ["any"]) %>,
                    "to": <%= to([["fn"]]) %>,
                    "to_if_alone": [
                        { "shell_command": "open '/Applications/Alacritty.app'" }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("a", ["right_command"], ["caps_lock"]) %>,
                    "to": [ { "shell_command": "open '/Applications/Utilities/Activity Monitor.app'" }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("d", ["right_command"], ["caps_lock"]) %>,
                    "to": [
                        { "shell_command": "open '/Applications/Dictionary.app'" }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("m", ["right_command"], ["caps_lock"]) %>,
                    "to": [
                        { "shell_command": "open '/Applications/Maps.app'" }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("u", ["right_command"], ["caps_lock"]) %>,
                    "to": [
                        { "shell_command": "open '/Applications/Unity/Unity.app'" }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f", ["right_command"], ["caps_lock"]) %>,
                    "to": [
                        { "shell_command": "open ~" }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("b", ["right_command"], ["caps_lock"]) %>,
                    "to": [
                        { "shell_command": "open '/Applications/Firefox.app'" }
                    ]
                }
            ]
        },
        {
            "description": "Left Alt (Option) + Spacebar open Alacritty",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("spacebar", ["left_option"], ["left_shift","right_shift", "caps_lock"]) %>,
                    "to": [
                        { "shell_command": "open '/Applications/Alacritty.app'" }
                    ]
                }
            ]
        },
        {
            "description": "Left Alt (Option) + V open MacVim",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("v", ["left_option"], ["left_shift","right_shift", "caps_lock"]) %>,
                    "to": [
                        { "shell_command": "open '/Applications/MacVim.app'" }
                    ]
                }
            ]
        }
    ]
}
